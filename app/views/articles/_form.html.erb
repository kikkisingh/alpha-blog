<div class="container-sm mb-3 p-3">

    <div class="row justify-content-md-center">
        <div class="col-10">
            <%= render 'shared/errors'%>
            <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info text-white rounded", local: true) do |f| %>
                <div class="row mb-3 ">
                    <%= f.label :title, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of the Article" %>
                    </div>
                </div>

                <div class="row mb-3">
                    <%= f.label :description, class: "col-2 col-form-label"%>
                    <div class="col-10">
                        <%= f.text_area :description, rows: "10", class: "form-control shadow rounded", placeholder: "Description of the Article" %>
                    </div>
                </div>
                <div class=text-center>
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div>

            <% end %>
        </div>
        <div class="mb-3">
            <%= link_to '[Cancel and return to articles listing]', articles_path, class: "row justify-content-md-center", id: "cancel-link" %>
        </div>
    </div>
</div>